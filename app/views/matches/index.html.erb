<p id="notice"><%= notice %></p>

<h1>Partidos</h1>

<table>
  <thead>
    <tr>
      <th>Campeonato</th>
      <th>Fecha</th>
      <th>Equipo Local</th>
      <th>Equipo Visita</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= Tournament.find_by_id(match.tournament_id).nombre %></td>
        <td><%= match.fecha %></td>
        <td><%= Team.find_by_id(match.equipo_local_id).nombre %></td>
        <td><%= Team.find_by_id(match.equipo_visita_id).nombre %></td>
        <td><%= link_to 'Mostrar información', match %></td>
        <td><%= link_to 'Editar', edit_match_path(match) %></td>
        <td><%= link_to 'Borrar', match, method: :delete, data: { confirm: 'Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Partido', new_match_path %>
