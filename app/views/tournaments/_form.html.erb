<%= simple_form_for @tournament do |f| %>
  <%= f.input :nombre, required: true %>
  <%= f.input :tipo do %>
    <%= f.select :tipo, dict_tipo.map { |k, v| [v, k, { class: k }] },
    {include_blank: true}, :required => true %>
  <% end %>
  <%= f.association :teams, label_method: :nombre, as: :check_boxes %>
  <%= f.input :pdf, as: :file %>
  <%= f.button :submit %>
<% end %>
