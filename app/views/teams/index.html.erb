
<h1>Equipos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Pais</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.nombre %></td>
        <td><%= team.pais %></td>
        <td><%= link_to 'Mostrar información', team %></td>
        <% if current_user%>
          <td><%= link_to 'Editar', edit_team_path(team) %></td>
          <td><%= link_to 'Borrar', team, method: :delete, data: { confirm: 'Estás seguro?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo equipo', new_team_path %>
